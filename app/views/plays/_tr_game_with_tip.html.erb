<!-- requires: game, tip, tabindex, f (form) -->

<!-- options:
      - show_group
      - show_round  -->
      
<tr id='game<%= game.id %>'>

  <% if tip.present? %>
    <% if game.over?  %>
      <%= render :partial => 'td_tip_toto12x',  :locals => { :tip  => tip }  %>
      <%= render :partial => 'td_tip_bingo',    :locals => { :tip  => tip }  %>
      <%= render :partial => 'td_game_team1',   :locals => { :game => game } %>
      <%= render :partial => 'td_tip_score',    :locals => { :tip  => tip }  %>
      <%= render :partial => 'td_game_score',   :locals => { :game => game } %>
    <% else %>
      <td><!-- no tip.toto12x yet --></td>
      <td><!-- no tip.bingo yet --></td>
      <%= render :partial => 'td_game_team1',   :locals => { :game => game } %>
      <%= render :partial => 'td_tip_score_input',
                 :locals  => { :tip      => tip,
                               :tabindex => tabindex,
                               :f        => f } %>
      <td><!-- no game.score yet --></td>
    <% end %>
    <%= render :partial => 'td_game_team2',   :locals => { :game => game } %>
  <% else %> <!-- no tip present -->
    <td><!-- no tip.toto12x yet --></td>
    <td><!-- no tip.bingo yet --></td>
    <%= render :partial => 'td_game_team1',   :locals => { :game => game } %>
    <td class='tip-score'>â™¦<!-- fehler: tip datensatz fehlt! --></td>
    <%= render :partial => 'td_game_score',   :locals => { :game => game } %>
    <%= render :partial => 'td_game_team2',   :locals => { :game => game } %>  
  <% end %>
  
  <td>
    <% if show_group %>
      <%= "(#{game.group.title})" if game.group %>
    <% elsif show_round %>
      <%= "(#{game.round.title})" %>
    <% end %>
  </td>

  <%= render :partial => 'td_game_date',    :locals => { :game => game } %>

</tr>
