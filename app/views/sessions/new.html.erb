<%= form_for @user, :url => session_path() do |f| %>
 <div>
    <%= f.label :email, 'Email' %><br/>
    <%= f.text_field :email, :data => { :autofocus => true } %>
 </div>
 
  <div>
     <%= f.label :password, 'Passwort' %><br/>
     <%= f.password_field :password %>
  </div>
  
  <div>
    <%= f.submit 'Anmelden', :class => 'btn-primary' %>
  </div>
<% end %>


<div style='color: grey;'>
<hr>
<p style='font-size: 12px;'>Version Info</p>
<table>
<% Prop.order( 'created_at asc' ).all.each do |prop| %>
  <tr>
    <td style='font-size: 12px;'><%= "#{prop.key}/#{prop.value}" %></td>
    <td style='font-size: 12px;'><%= "(#{prop.created_at})" %></td>
  </tr>
<% end %>
</table>
</div>